@{
}

<div class="container mt-5">
    <h3>Welcome to Dashbaord page.</h3>
</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="container mt-5">
        <div class="row justify-content-start align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-4">
                <fieldset>
                    <legend>Activities for Admin</legend>
                    <ul>
                        <li>List</li>
                        <li>Update</li>
                        <li>Delete</li>
                        <li>Details</li>
                    </ul>
                    <hr />
                    <a type="submit" class="btn btn-primary" asp-controller="Student" asp-action="List">Perform Actions</a>
                </fieldset>

            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row justify-content-start align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-4">
                <fieldset>
                    <legend>Activities for Member</legend>
                    <ul>
                        <li>See students list.</li>
                    </ul>
                    <hr />
                    <a type="submit" class="btn btn-primary" asp-controller="Student" asp-action="List">See List</a>
                </fieldset>
            </div>
        </div>
    </div>
}