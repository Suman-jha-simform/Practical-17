@model Practical_17.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Details</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Grades" class="control-label"></label>
                <input asp-for="Grades" class="form-control" />
                <span asp-validation-for="Grades" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Update" class="btn btn-warning" />
                <a asp-action="List" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
